                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <!--end::Referred users-->



<br>
                                <br>


                                <!--begin::Affiliate View-->
                                <div class="card">
                                    <div class="card-header card-header-stretch">
                                        <div class="card-title">
                                            <h3>Affiliate View</h3>
                                        </div>
                                    </div>
