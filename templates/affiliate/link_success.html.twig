                                                <input type="hidden" name="affiliateLinkId" value="{{ affiliateLinkId }}">
                                                <button type="submit" class="btn btn-primary">Get My Commission</button>
                                            </form>
                                        </div>

                                        </div>
                                    </div>
                                </div>
